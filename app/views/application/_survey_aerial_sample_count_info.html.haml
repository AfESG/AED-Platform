.survey_aerial_sample_count_info
  .edit_link
    = link_to image_tag("editable.png"), edit_survey_aerial_sample_count_path(c)
  .survey_aerial_sample_count_header
    .survey_aerial_sample_count_transects
      - if c.total_possible_transects>0
        = c.total_possible_transects
        transects
    .survey_aerial_sample_count_strata
      - if c.stratum_level_data_submitted == true
        Recorded at stratum level
      - else
        - if c.surveyed_at_stratum_level == true
          Multiple strata reported as aggregate
        - else
          No strata
- for b in c.survey_aerial_sample_count_strata do
  =render :partial => 'survey_aerial_sample_count_stratum_info', :locals => {:b => b}
- if c.stratum_level_data_submitted == true
  .stratum_add_actions
    = link_to new_survey_aerial_sample_count_survey_aerial_sample_count_stratum_path(c) do
      = image_tag('plus.png')
      Add a stratum
- elsif c.survey_aerial_sample_count_strata.size < 1
  .stratum_add_actions
    = link_to new_survey_aerial_sample_count_survey_aerial_sample_count_stratum_path(c) do
      = image_tag('plus.png')
      Report aggregates as a single stratum

